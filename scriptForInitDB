MySQL

CREATE SCHEMA `toll_road`

CREATE TABLE `toll_road`.`drivers` (
  `id_driver` INT NOT NULL,
  `name` VARCHAR(20) NOT NULL,
  `surname` VARCHAR(20) NOT NULL,
  `e_mail` VARCHAR(45) NOT NULL,
  `active` TINYINT(1) NOT NULL,
  PRIMARY KEY (`id_driver`))

CREATE TABLE `toll_road`.`drivers_on_roads` (
  `iddrivers_on_roads` INT NOT NULL,
  `entranceCheckPoint` INT(2) NOT NULL,
  PRIMARY KEY (`iddrivers_on_roads`));


